<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="springboard.ReplyDAO">
	<resultMap type="kr.ac.kopo.board.vo.ReplyVO" id="replyMap">
		<result column="no" property="no" />
		<result column="writer" property="writer" />
		<result column="content" property="content" />
		<result column="reg_date" property="regDate" />
		<result column="boardNo" property="boardNo" />
	</resultMap>
	<select id="selectAll" resultType="BoardVO" resultMap="boardMap">
		select * from t_board order by no asc
	</select>
	
	<select id="selectByNo" resultType="BoardVO" resultMap="boardMap" parameterType="Integer">
		select * from t_board where no = #{no}
	</select>
	
	<insert id="insertNewReply" parameterType="ReplyVO">
		insert into t_reply (no, writer, content, boardno) values (seq_t_reply_no.nextval, #{writer}, #{content}, #{boardNo})
	</insert>
</mapper>
