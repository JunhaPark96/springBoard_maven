package springdi_assignment.tv_speaker.ver1;

public class LGTV extends TV implements TVService{
	public LGTV() {
		super();
	}
	
	public LGTV(SpeakerService leftSpeaker, SpeakerService rightSpeaker) {
        super(leftSpeaker, rightSpeaker);
    }
	
	public void turnon() {
		System.out.println("TV 전원 켜짐");		
	}

	public void turnoff() {
		System.out.println("TV 전원 꺼짐");		
	}

	public void volumeup() {
		System.out.println("TV 볼륨 키우기");
	}

	public void volumedown() {
		System.out.println("TV 볼륨 낮추기");		
	}

	public void printSpeakerBrand() {
		System.out.println("스피커 브랜드는 " + leftSpeaker.getBrand());
	}
	
}
