package springdi_assignment.tv_speaker.ver1;

public class XYZspeaker implements Speaker{
	private Speaker leftSpeaker;
	private Speaker rightSpeaker;
	private int volume = 0;
	
	public XYZspeaker() {
	}

	public XYZspeaker(Speaker leftSpeaker, Speaker rightSpeaker, int volume) {
		this.leftSpeaker = leftSpeaker;
		this.rightSpeaker = rightSpeaker;
		this.volume = volume;
	}

	public Speaker getLeftSpeaker() {
		return leftSpeaker;
	}

	public void setLeftSpeaker(Speaker leftSpeaker) {
		this.leftSpeaker = leftSpeaker;
	}

	public Speaker getRightSpeaker() {
		return rightSpeaker;
	}

	public void setRightSpeaker(Speaker rightSpeaker) {
		this.rightSpeaker = rightSpeaker;
	}

	public int getVolume() {
		return volume;
	}

	public void setVolume(int volume) {
		this.volume = volume;
	}
	
	

	public void volumeup() {
		volume++;
	}

	public void volumedown() {
		volume--;
	}

	public String getBrand() {
		return "ABC 스피커";
	}
}
